{% extends 'base.html.twig' %}
{% block title %}🎅 Créer une session Secret Santa{% endblock %}

{% block body %}
    <main class="min-h-screen bg-black text-white flex flex-col items-center justify-center px-6">
        <div class="bg-white/10 backdrop-blur-md p-10 rounded-2xl shadow-2xl max-w-lg w-full">
            <h1 class="text-3xl font-bold mb-6 text-center">🎁 Nouvelle session Secret Santa</h1>

            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    <div class="mb-4 bg-red-500/80 text-white py-2 px-4 rounded-lg">{{ message }}</div>
                {% endfor %}
            {% endfor %}

            <form method="post" class="space-y-6">
                <label class="block text-lg font-semibold mb-2">Participants (un par ligne)</label>
                <textarea name="participants" rows="6" class="w-full p-3 rounded-lg text-gray-900 focus:ring-2 focus:ring-rose-400" placeholder="Papa
Maman
Camille
Guillaume
Baptiste
Gauthier"></textarea>

                <button type="submit" class="w-full bg-rose-500 hover:bg-rose-600 transition text-white font-semibold py-3 rounded-lg shadow-lg">
                    Générer la session 🎄
                </button>
            </form>
        </div>
    </main>
{% endblock %}
